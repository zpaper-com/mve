# Environment Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Server Configuration
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/mve_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Auth0 Configuration (Production)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=mve-api
AUTH0_WEBHOOK_SECRET=your_webhook_secret

# JWT Configuration (Development fallback)
JWT_SECRET=your_super_secret_jwt_key_min_256_bits_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_min_256_bits_long
SESSION_MAX_AGE=86400000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_STATIC=mve-static-assets
AWS_S3_BUCKET_DOCUMENTS=mve-documents
AWS_S3_BUCKET_ATTACHMENTS=mve-attachments
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@zpaper.com
FROM_NAME=MVE System

# SMS Configuration (Phase 2)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Limits
MAX_FILE_SIZE=26214400
MAX_FILES_PER_UPLOAD=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Security Configuration
BCRYPT_ROUNDS=12
CSRF_SECRET=your_csrf_secret_key
ENCRYPTION_KEY=your_32_byte_encryption_key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development Only
ENABLE_DEV_ROUTES=true
ENABLE_MOCK_AUTH=false
SKIP_EMAIL_VERIFICATION=true