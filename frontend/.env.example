# Environment Configuration Example
# Copy this file to .env.local and update with your values

# Application Environment
VITE_NODE_ENV=development
VITE_APP_NAME=MVE
VITE_APP_VERSION=1.0.0
VITE_APP_TITLE=MVE - PDF Workflow System

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000

# Auth0 Configuration (Production)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=mve-api
VITE_AUTH0_REDIRECT_URI=http://localhost:3000/auth/callback

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_USE_AUTH0=false

# Logging Configuration
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGGING=true

# PDF Configuration
VITE_PDF_WORKER_URL=/pdf.worker.min.js
VITE_MAX_PDF_SIZE_MB=10

# File Upload Configuration
VITE_MAX_FILE_SIZE=26214400
VITE_MAX_ATTACHMENT_SIZE_MB=25
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Workflow Configuration
VITE_MAX_RECIPIENTS=3

# Development Settings
VITE_MOCK_API=false
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true